<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="Title"
            android:textAppearance="?android:attr/textAppearanceLarge" />


        <TextView
            android:id="@+id/tv_stack_size"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="fragment: 0 ---  vh:0"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/tv_default"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="test Default ViewHelper"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/tv_back_to_last"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="test BackToLast ViewHelper"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/tv_back_to_first"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="test BackToFirst ViewHelper"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/tv_bring_last_to_top"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="test BringLastToTop ViewHelper"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/tv_bring_first_to_top"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="test BringFirstToTop ViewHelper"
            android:textAppearance="?android:attr/textAppearanceLarge" />


        <TextView
            android:id="@+id/tv_message"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="test MessageDefault ViewHelper"
            android:textAppearance="?android:attr/textAppearanceLarge" />


        <TextView
            android:id="@+id/tv_change_screen_orientation"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="test change orientation"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>
</ScrollView>